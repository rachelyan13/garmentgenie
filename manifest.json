{
    "name": "Garment Genie | Sustainable SheIn Alternative Clothing Recommendations",
    "description": "Automatically recommends alternatives to SheIn products on thredUp.",
    "author": "Rachel Y.",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Garment Genie"
    },
    "permissions": ["activeTab", "tabs", "scripting", "windows"],

    "host_permissions": [
        "https://us.shein.com/*",
        "https://www.thredup.com/*"
      ],

      "content_scripts": [
        {
          "matches": ["*://*.shein.com/*"],
          "js": ["content.js"]
        }
      ],

    "background": {
        "service_worker": "background.js"
      }
}