{
    "name": "Garment Genie",
    "description": "Recommends cheaper & sustainable clothing alternatives from thredUp for SheIn shoppers.",
    "author": "Rachel Y.",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "tabs", "scripting"],

    "host_permissions": [
        "https://us.shein.com/*",
        "https://www.thredup.com/*"
      ],

      "content_scripts": [
        {
          "matches": ["*://*.shein.com/*", "*://*.thredup.com/*"],
          "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
      }
}